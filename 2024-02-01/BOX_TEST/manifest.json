{
  "manifest_version": 2,
  "name": "Google Search Image Adder",
  "version": "1.0",
  "description": "Adds an image to the Google search results page.",
  "permissions": ["activeTab", "background"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/*", "*://www.google.co.jp/*", "*://www.google.kr/*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "img.png"
  },
  "browser_action": {
    "default_icon": "img.png",
    "default_popup": "popup.html"
  }
}
